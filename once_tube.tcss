/* once_tube.tcss */

$primary: #FF5FA2;   /* TWICE Magenta */
$secondary: #FCC89B; /* TWICE Apricot */
$accent: #FF3B81;    /* Deep Pink */

Screen {
    background: #0D0D0D;
    color: white;
}

#app-grid {
    layout: horizontal;
    height: 100%;
    padding: 1 2;
}

#search-area {
    width: 1fr;    /* Ambil 1 bagian */
    border: tall $primary;
    background: #121212;
    padding: 1;
}

#results-area {
    width: 2fr;    /* Ambil 2 bagian (paling lebar) */
    border: tall $secondary;
    background: #121212;
    padding: 1;
}

#controls-area {
    width: 1fr;    /* Ambil 1 bagian */
    border: tall $primary; 
    padding: 1;
}

/* Update Playback Controls biar tombolnya beneran sampingan */
#playback-controls {
    height: 3;
    width: 100%;
    margin-top: 1;
    layout: horizontal; /* Pastiin layoutnya horizontal */
}

#playback-controls Button {
    width: 1fr;      /* Bagi rata sisa tempat */
    margin: 0;       /* Hapus margin biar ga tabrakan */
    height: 100%;
}

#pause-button {
    background: $warning;
    color: black;
}

#next-button {
    background: $accent;
}

#results-area {
    width: 50%;
    border: tall $secondary;
    background: #121212;
    padding: 1;
}

Static.section-title {
    content-align: center middle;
    width: 100%;
    background: $accent;
    color: white;
    text-style: bold;
    margin-bottom: 1;
}

Input {
    height: 3;
    border: tall $secondary;
    color: white;
    margin-bottom: 1;
    width: 100%;
}

Button {
    width: 100%;
    height: 3;
    margin-bottom: 1;
    border: tall transparent;
    color: white;
    text-align: center;
}

#search-button {
    background: $primary;
}

#play-video-button {
    background: $accent;
}

#play-audio-button {
    background: $secondary;
    color: black;
}

Button:hover {
    border: tall white;
    text-style: bold;
    /* brightness: 120%; Optional effect */
}

#play-audio-button:hover {
    color: white;
}

DataTable {
    border: solid $primary;
    height: 1fr;
    margin-top: 1;
}

DataTable > .datatable--header {
    background: $accent;
    color: white;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $primary 40%;
    color: white;
    text-style: italic;
}

Footer {
    background: $primary;
    color: white;
}